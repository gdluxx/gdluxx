{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["chrome", "webextension-polyfill"],
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"],

      "#app": ["src/content/app"],
      "#app/*": ["src/content/app/*"],
      "#views": ["src/content/views"],
      "#views/*": ["src/content/views/*"],
      "#assets": ["src/content/assets"],
      "#assets/*": ["src/content/assets/*"],

      "#components": ["src/content/lib/components"],
      "#components/*": ["src/content/lib/components/*"],
      "#stores": ["src/content/lib/stores"],
      "#stores/*": ["src/content/lib/stores/*"],
      "#utils": ["src/content/lib/utils"],
      "#utils/*": ["src/content/lib/utils/*"],
    }
  },
  "include": [
    "entrypoints/**/*",
    "components/**/*",
    "utils/**/*",
    "src/**/*",
    "wxt.config.ts",
    ".wxt/types/imports.d.ts"
  ]
}
