{
  "git": {
    "commitMessage": "chore(extension): release v${version}",
    "tagName": "extension-v${version}",
    "pushArgs": ["--follow-tags"],
    "tagMatch": "extension-v*"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Extension v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "context": {
        "gitRawCommitsOpts": {
          "path": "extension/"
        }
      }
    }
  }
}
