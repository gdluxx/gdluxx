{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "extension-v${version}",
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Extension v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}